@model Code.Models.User

@{
    ViewBag.Title = "Forgot Password";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        
        .centered-form {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 2rem;
        }


        .form-background {
            background-image: url('/assets/images/banner-image3.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border-radius: 44.375rem;
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 110vh;
            width: 100%;
        }

        .form-container {
            border: 1px solid rgba(255, 255, 255, 0.18); 
            border-radius: 0.375rem; 
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2); 
            padding: 2rem;
            background: rgba(255, 255, 255, 0.3); 
            backdrop-filter: blur(10px);
            color: #333; 
        }

            .form-container h2 {
                margin-bottom: 1.5rem;
            }

        .form-group {
            margin-bottom: 1rem; 
        }

        .text-danger {
            color: #ff6b6b; 
        }

        .btn-primary {
            background-color: #007bff; 
            border: none; 
            border-radius: 0.375rem; 
        }
        input {
            border-block-color:black;
        }
    </style>
</head>
<body>
    <!-- Start Forgot Password Form -->
    <div class="centered-form">
        <div class="form-background">
            <div class="card form-container">
                <div class="card-body">
                    <h2 class="text-center">Enter Your Email</h2>
                    @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { @onsubmit = "return displayAlert();" }))
                    {
                        <div class="form-group mb-3">
                            <label class="text-black" for="email">Email</label>
                            @Html.TextBox("email", null, new { @class = "form-control", type = "email", required = "required" })
                            <span class="text-danger">@ViewBag.emailError</span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
