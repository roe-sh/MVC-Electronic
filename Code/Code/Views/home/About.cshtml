@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- About Us Section -->
<div class="brand_color">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>About Us</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="about">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="about_box">
                    <figure><img src="~/images/slider3.jpg" alt="Laptop Shop" /></figure>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="about_box">
                    <h3>Who We Are</h3>
                    <p>Welcome to <strong>Lighten Laptop Shop</strong> – your one-stop destination for the latest laptops, trusted sellers, and top brands. We connect customers with multiple stores and sellers, offering an extensive selection of laptops for every need and budget.</p>
                    <p>With a mission to make technology accessible to everyone, we provide an easy, secure, and fast shopping experience. Whether you're a professional, gamer, or student, we have the perfect laptop for you.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="whyschose">
    <div class="container">
        <div class="row">
            <div class="col-md-7 offset-md-3">
                <div class="title">
                    <h2>Why <strong class="black">Choose Us?</strong></h2>
                    <span>The ultimate marketplace for laptops, brands, and trusted sellers!</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="choose_bg">
    <div class="container">
        <div class="white_bg">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <div class="for_box">
                        <i><img src="~/../images/delivery.jpg" /></i>
                        <h3>Fast Delivery</h3>
                        <p>Get your favorite laptops delivered to your doorstep quickly and securely.</p>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <div class="for_box">
                        <i><img src="~/../images/trusted sellers.jpg" /></i>
                        <h3>Trusted Sellers</h3>
                        <p>Shop confidently from verified sellers across multiple stores.</p>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <div class="for_box">
                        <i><img src="~/../images/brands.jpg" /></i>
                        <h3>Multiple Brands</h3>
                        <p>Find laptops from leading global brands like Apple, Dell, Lenovo, and more.</p>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <div class="for_box">
                        <i><img src="~/../images/support.jpg" /></i>
                        <h3>Expert Support</h3>
                        <p>Our expert team is here to help you choose the perfect laptop for your needs.</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <a class="read-more" href="#">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Service Section -->
<div class="service">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="title">
                    <h2>Our <strong class="black">Services</strong></h2>
                    <span>Comprehensive solutions for all your laptop needs.</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <div class="service-box">
                    <i><img src="~/../images/repair.jpg" /></i>
                    <h3>Repair Services</h3>
                    <p>Quick and reliable repairs for laptops of all brands and models.</p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <div class="service-box">
                    <i><img src="~/../images/payment.jpg" /></i>
                    <h3>Secure Payments</h3>
                    <p>Enjoy safe and secure online transactions for peace of mind.</p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <div class="service-box">
                    <i><img src="~/../images/Consultation.jpg" /></i>
                    <h3>Consultation</h3>
                    <p>Get advice from our laptop experts to find the perfect match for your needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>
