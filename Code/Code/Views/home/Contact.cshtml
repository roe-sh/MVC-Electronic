@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="brand_color">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>Contact Us</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p>Have questions, need support, or looking for the perfect laptop? Fill out the form below, and our team will get back to you as soon as possible.</p>
                <form class="main_form" action="/Contact/Submit" method="POST">
                    <div class="row">
                        <!-- Name Input -->
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <input class="form-control" placeholder="Your Name" type="text" name="Name" required>
                        </div>

                        <!-- Email Input -->
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <input class="form-control" placeholder="Your Email" type="email" name="Email" required>
                        </div>

                        <!-- Phone Input -->
                        <div class="col-md-12">
                            <input class="form-control" placeholder="Your Phone Number" type="tel" name="Phone" required>
                        </div>

                        <!-- Message Textarea -->
                        <div class="col-md-12">
                            <textarea class="form-control" placeholder="Your Message" name="Message" rows="5" required></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-md-12">
                            <button class="send" type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
