@{
    ViewData["Title"] = "Welcome to Laptop Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Slider Section -->
<section class="slider_section" style="background: linear-gradient(to bottom, #ffffff, #f8f9fa);">
    <div id="main_slider" class="carousel slide banner-main" data-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img class="first-slide" src="images/pexels-content-pixie-1405717-2967810.jpg" alt="First slide" style="width: 100%; height: auto;">
                <div class="container">
                    <div class="carousel-caption relative text-start">
                        <h1 class="text-uppercase text-shadow">
                            Welcome to <br><strong class="black_bold">Laptop Store</strong><br>
                            <strong class="yellow_bold">Marketplace</strong>
                        </h1>
                        <p class="lead">
                            Explore a wide range of laptops from top brands. <br>
                            Multiple stores, trusted sellers, and the best deals await you!
                        </p>
                        <a href="#" class="btn btn-primary btn-lg shadow">Shop Laptops</a>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img class="second-slide" src="images/pexels-fauxels-3184408.jpg" alt="Second slide" style="width: 100%; height: auto;">
                <div class="container">
                    <div class="carousel-caption relative text-end">
                        <h1 class="text-uppercase text-shadow">
                            Discover <br><strong class="black_bold">Top Brands</strong><br>
                            <strong class="yellow_bold">At One Place</strong>
                        </h1>
                        <p class="lead">
                            Shop laptops from leading brands like Dell, HP, Apple, Lenovo, <br>
                            and many more. Find the perfect device for your needs.
                        </p>
                        <a href="#" class="btn btn-secondary btn-lg shadow">View Brands</a>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img class="third-slide" src="images/pexels-moe-magners-7495612.jpg" alt="Third slide" style="width: 100%; height: auto;">
                <div class="container">
                    <div class="carousel-caption relative text-center">
                        <h1 class="text-uppercase text-shadow">
                            Exceptional <br><strong class="black_bold">Deals</strong><br>
                            <strong class="yellow_bold">From Trusted Sellers</strong>
                        </h1>
                        <p class="lead">
                            Enjoy competitive prices, secure payments, and fast delivery <br>
                            from verified sellers across multiple stores.
                        </p>
                        <a href="#" class="btn btn-success btn-lg shadow">Browse Deals</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carousel Navigation -->
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <i class='fa fa-angle-left fa-2x text-dark'></i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i class='fa fa-angle-right fa-2x text-dark'></i>
        </a>
    </div>
</section>

<!-- Why Choose Us Section -->
<div class="whyschose py-5" style="background: #f9f9f9;">
    <div class="container">
        <div class="row">
            <div class="col-md-7 offset-md-3 text-center">
                <h2 class="mb-3">Why <strong class="black">Choose Us?</strong></h2>
                <p class="lead">The ultimate marketplace for laptops, brands, and trusted sellers!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <div class="for_box p-4 text-center shadow-sm rounded">
                    <i><img src="~/../images/delivery.jpg" class="img-fluid" /></i>
                    <h3 class="mt-3">Fast Delivery</h3>
                    <p>Get your favorite laptops delivered to your doorstep quickly and securely.</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <div class="for_box p-4 text-center shadow-sm rounded">
                    <i><img src="~/../images/trusted sellers.jpg" class="img-fluid" /></i>
                    <h3 class="mt-3">Trusted Sellers</h3>
                    <p>Shop confidently from verified sellers across multiple stores.</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <div class="for_box p-4 text-center shadow-sm rounded">
                    <i><img src="~/../images/brands.jpg" class="img-fluid" /></i>
                    <h3 class="mt-3">Multiple Brands</h3>
                    <p>Find laptops from leading global brands like Apple, Dell, Lenovo, and more.</p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <div class="for_box p-4 text-center shadow-sm rounded">
                    <i><img src="~/../images/support.jpg" class="img-fluid" /></i>
                    <h3 class="mt-3">Expert Support</h3>
                    <p>Our expert team is here to help you choose the perfect laptop for your needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Service Section -->
<div class="service py-5" style="background: linear-gradient(to right, #f8f9fa, #ffffff);">
    <div class="container text-center">
        <h2 class="mb-5">Our <strong class="black">Services</strong></h2>
        <div class="row">
            <div class="col-md-4">
                <div class="service-box p-4 shadow-sm rounded">
                    <i><img src="~/../images/repair.jpg" class="img-fluid mb-3" /></i>
                    <h3>Repair Services</h3>
                    <p>Quick and reliable repairs for laptops of all brands and models.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-box p-4 shadow-sm rounded">
                    <i><img src="~/../images/payment.jpg" class="img-fluid mb-3" /></i>
                    <h3>Secure Payments</h3>
                    <p>Enjoy safe and secure online transactions for peace of mind.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-box p-4 shadow-sm rounded">
                    <i><img src="~/../images/Consultation.jpg" class="img-fluid mb-3" /></i>
                    <h3>Consultation</h3>
                    <p>Get advice from our laptop experts to find the perfect match for your needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>
